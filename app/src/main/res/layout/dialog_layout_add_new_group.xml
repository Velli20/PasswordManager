<com.velli.passwordmanager.widget.NewGroupView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/add_new_group_input_field"
        style="@style/NewEntryInputField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="textCapWords"
        app:met_errorColor="@color/new_entry_error"
        app:met_maxCharacters="35" >
    </com.rengwuxian.materialedittext.MaterialEditText>



</com.velli.passwordmanager.widget.NewGroupView>