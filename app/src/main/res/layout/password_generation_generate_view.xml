<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:robototext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp" >

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:alpha="0"
        android:background="#000000" />

    <com.velli.passwordmanager.roboto.RobotoTextView
        android:id="@+id/password_generation_password"
        robototext:style="light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/password_generation_vertical_divider"
        android:layout_toStartOf="@+id/password_generation_vertical_divider"
        android:gravity="center"
        android:textColor="@color/color_primary_500"
        android:textSize="32sp" />
    
     <View
        android:id="@+id/password_generation_vertical_divider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/password_generation_button_refresh"
        android:layout_toStartOf="@+id/password_generation_button_refresh"
        android:alpha="0.12"
        android:background="#000000" />



    <ImageButton
        android:id="@+id/password_generation_button_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/imageview_accesibility_des_refresh_password"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="16dp"
        android:background="@drawable/selectable_background_apptheme"
        android:src="@drawable/ic_action_refresh" />

</RelativeLayout>