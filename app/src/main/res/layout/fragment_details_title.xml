<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:robototext="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:clipChildren="false"
    tools:ignore="RtlHardcoded" >

    <com.velli.passwordmanager.roboto.RobotoTextView
        android:id="@+id/details_view_description"
        robototext:style="thin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left|start"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:textColor="@color/color_primary_500"
        android:clipToPadding="false"
        android:textSize="@dimen/password_card_title_size" />

    <ImageView
        android:id="@+id/details_view_login_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="right|end|center_vertical"
        android:alpha="0.60"
        android:src="@drawable/ic_type_app"
        tools:ignore="ContentDescription" />

    

</FrameLayout>