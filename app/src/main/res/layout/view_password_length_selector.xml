<com.velli.passwordmanager.widget.setPasswordLengthView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:robototext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <com.velli.passwordmanager.roboto.RobotoTextView
        android:id="@+id/set_password_lenght_label"
        robototext:style="regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="30dp"
        android:gravity="start|center_vertical"
        android:layout_centerVertical="true" 
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:textColor="#000000"
        android:alpha="0.54"
        android:textSize="16sp" />
    

    <SeekBar
        android:id="@+id/set_password_lenght_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/set_password_lenght_label"
        android:layout_toRightOf="@+id/set_password_lenght_label"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" 
        android:max="50"/>
    

</com.velli.passwordmanager.widget.setPasswordLengthView>
