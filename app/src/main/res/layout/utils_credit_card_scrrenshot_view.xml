<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:robototext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    
    <com.velli.passwordmanager.roboto.RobotoTextView
        android:id="@+id/details_view_description"
        robototext:style="thin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:drawablePadding="16dp"
        android:textColor="@color/color_primary_500"
        android:textSize="@dimen/password_card_title_size" />

    <com.velli.passwordmanager.roboto.RobotoTextView
        android:id="@+id/details_view_login_type"
        robototext:style="thin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:alpha="0.60"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="20sp" />
    
    <View
        android:id="@+id/details_view_login_type_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.12"
        android:background="#000000" />
    
    <com.velli.passwordmanager.roboto.RobotoTextView
        android:id="@+id/details_view_card_title"
        style="@style/DetailsViewSubHeader"
        robototext:style="medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/new_credit_card_card_type" />

    <com.velli.passwordmanager.roboto.RobotoTextView
        android:id="@+id/details_view_card"
        style="@style/DetailsViewDetail"
        robototext:style="regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        robototext:scrollable="true"/>

    <com.velli.passwordmanager.roboto.RobotoTextView
        android:id="@+id/details_view_card_number_title"
        style="@style/DetailsViewSubHeader"
        robototext:style="medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_credit_card_card_number" />

    <com.velli.passwordmanager.roboto.RobotoTextView
        android:id="@+id/details_view_card_number"
        style="@style/DetailsViewDetail"
        robototext:style="regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        robototext:scrollable="true" />

    <com.velli.passwordmanager.roboto.RobotoTextView
        android:id="@+id/details_view_card_exp_date_title"
        style="@style/DetailsViewSubHeader"
        robototext:style="medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_credit_card_expiration_date" />

     <com.velli.passwordmanager.roboto.RobotoTextView
        android:id="@+id/details_view_card_exp_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/DetailsViewDetail"
        robototext:style="regular" />

    <com.velli.passwordmanager.roboto.RobotoTextView
        android:id="@+id/details_view_card_csv_title"
        style="@style/DetailsViewSubHeader"
        robototext:style="medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_credit_card_csv" />

    <com.velli.passwordmanager.roboto.RobotoTextView
        android:id="@+id/details_view_card_csv"
        style="@style/DetailsViewDetail"
        robototext:style="regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <com.velli.passwordmanager.roboto.RobotoTextView
        android:id="@+id/details_view_group_title"
        style="@style/DetailsViewSubHeader"
        robototext:style="medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_entry_group" />

    <com.velli.passwordmanager.roboto.RobotoTextView
        android:id="@+id/details_view_group"
        style="@style/DetailsViewDetail"
        robototext:style="regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
