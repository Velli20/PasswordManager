<com.velli.passwordmanager.widget.FabMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:robototext="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_list_fab_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    
    <include layout="@layout/view_welcome"/>
     
    <com.velli.passwordmanager.roboto.RobotoTextView
        android:id="@+id/main_list_title_new_credit_card"
        style="@style/FabTitle"
        robototext:style="medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="144dp"
        android:text="@string/title_add_new_credit_card" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/main_list_fab_new_credit_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right|end"
        android:layout_marginBottom="144dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:src="@drawable/ic_action_add_credit_card"
        app:fabSize="mini"
        app:borderWidth="0dp"
        tools:ignore="RtlHardcoded" />

    <com.velli.passwordmanager.roboto.RobotoTextView
        android:id="@+id/main_list_title_new_password"
        style="@style/FabTitle"
        robototext:style="medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:text="@string/title_add_new_password" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/main_list_fab_new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right|end"
        android:layout_marginBottom="88dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:src="@drawable/ic_action_add_password"
        app:fabSize="mini"
        app:borderWidth="0dp"
        tools:ignore="RtlHardcoded" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/main_list_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right|end"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_action_add_dark"
        app:fabSize="normal"
        tools:ignore="RtlHardcoded" />

</com.velli.passwordmanager.widget.FabMenu>