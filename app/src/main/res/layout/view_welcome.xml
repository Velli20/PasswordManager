<com.velli.passwordmanager.widget.WelcomeView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="com.velli.passwordmanager.widget.WelcomeViewBehavior"
    android:id="@+id/welcome_view"
    android:layout_gravity="end"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">

    <com.velli.passwordmanager.roboto.RobotoTextView
        xmlns:robototext="http://schemas.android.com/apk/res-auto"
        android:id="@+id/welcome_view_hello"
        robototext:style="light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/welcome_view_arrow"
        android:layout_toStartOf="@+id/welcome_view_arrow"
        android:layout_above="@+id/welcome_view_arrow"
        android:layout_alignLeft="@+id/welcome_view_tap_to_add"
        android:layout_alignStart="@+id/welcome_view_tap_to_add"
        android:text="@string/welcome_view_hello"
        android:textColor="@color/color_primary_500"
        android:textSize="32sp" />
    
    <com.velli.passwordmanager.roboto.RobotoTextView
        xmlns:robototext="http://schemas.android.com/apk/res-auto"
        android:id="@+id/welcome_view_tap_to_add"
        robototext:style="regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/welcome_view_arrow"
        android:layout_toStartOf="@+id/welcome_view_arrow"
        android:layout_below="@+id/welcome_view_hello"
        android:textColor="#000000"
        android:alpha="0.87"
        android:textSize="16sp"
        android:text="@string/welcome_view_tap_to_add" />
    
    <com.velli.passwordmanager.roboto.RobotoTextView
        xmlns:robototext="http://schemas.android.com/apk/res-auto"
        android:id="@+id/welcome_view_info"
        robototext:style="light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/welcome_view_arrow"
        android:layout_toStartOf="@+id/welcome_view_arrow"
        android:layout_below="@+id/welcome_view_tap_to_add"
        android:layout_alignLeft="@+id/welcome_view_tap_to_add"
        android:layout_alignStart="@+id/welcome_view_tap_to_add"
        android:textColor="#000000"
        android:alpha="0.54"
        android:textSize="14sp"
        android:text="@string/welcome_view_info" />

    <ImageView 
        android:id="@+id/welcome_view_arrow"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:contentDescription="@null"
        android:paddingBottom="88dp"
        android:scaleType="center"
        android:src="@drawable/ic_toooltip"/>
    
</com.velli.passwordmanager.widget.WelcomeView>