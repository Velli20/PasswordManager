<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:robototext="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:background="@drawable/selectable_background_apptheme"
    tools:context=".ActivityMain" >

    <ImageView
        android:id="@+id/list_item_navigation_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:focusable="false"
        tools:ignore="ContentDescription" />
    
    <com.velli.passwordmanager.roboto.RobotoTextView
        android:id="@+id/list_item_navigation_text"
        robototext:style="medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/list_item_navigation_secondary_text"
        android:layout_toStartOf="@+id/list_item_navigation_secondary_text"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:alpha="0.87"
        android:textColor="#000000"
        android:textSize="14sp" />
    
    <com.velli.passwordmanager.roboto.RobotoTextView
        android:id="@+id/list_item_navigation_secondary_text"
        robototext:style="medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:alpha="0.54"
        android:visibility="gone"
        android:textColor="#000000"
        android:textSize="14sp" />

</RelativeLayout>
