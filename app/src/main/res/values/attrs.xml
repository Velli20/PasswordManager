<resources>

    <declare-styleable name="ScrimInsetsView">
        <attr name="frameInsetForeground" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="ListCircle">
        <attr name="background_color" format="string"/>
        <attr name="background_color_selected" format="string"/>
        <attr name="drawable_normal" format="reference"/>
        <attr name="letter" format="string"/>
        <attr name="letter_size" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="RobotoText">
        <attr name="style" format="enum">
            <enum name="bold" value="0" />
            <enum name="light" value="1" />
            <enum name="medium" value="2" />
            <enum name="regular" value="3" />
            <enum name="thin" value="4" />
        </attr>
        <attr name="scrollable" format="boolean"/>
    </declare-styleable>

</resources>